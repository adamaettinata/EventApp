<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dicoding.eventapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_active"
        android:name="com.dicoding.eventapp.ui.active.ActiveEventFragment"
        android:label="@string/title_active"
        tools:layout="@layout/fragment_active_event" />

    <fragment
        android:id="@+id/navigation_completed"
        android:name="com.dicoding.eventapp.ui.completed.CompletedEventFragment"
        android:label="@string/title_completed"
        tools:layout="@layout/fragment_completed_event" />
</navigation>